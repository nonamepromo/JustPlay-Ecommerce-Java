{% extends "views/layout.twig" %}

{% block js %}
<script type="text/javascript">
// Copy Component
function copy(element) {
	var $temp = $("<input>");
	$("body").append($temp);
	$temp.val($(element).clone().wrap('<p>').parent().html()).select();
	document.execCommand("copy");
	$temp.remove();
	$(element).wrap( "<span></span>" );
	$(element).parent().append('<div class="notification animated fadeInDown fast"><div class="alert alert-info">Component copied to clipboard!</div></div>');

	setTimeout(function(){
		$(element).parent().find('.notification').removeClass('fadeInDown');
		$(element).parent().find('.notification').addClass('fadeOutUp');
	}, 2000);

	setTimeout(function(){
		$(element).parent().find('.notification').remove();
		$(element).unwrap();
	}, 4000);
}

(function($) {
	"use strict";
  $('.btn').click(function() {
    copy(this);
		return false;
  });
})(jQuery);
</script>
{% endblock %}

